<report name="Report1" caption="Report 1" description="Report Description1">
	<parameters>
		<parameter name="PRICE_LIMIT" data-type="Float"><default-value>150.0</default-value></parameter>
	</parameters>
	<variables>
	</variables>
	<data-sources>
		<data-source>
			<fields>
				<field name="ShippedDate" data-type="Date"/>
				<field name="ShipCountry" data-type="String"/>
				<field name="RequiredDate" data-type="Date"/>
				<field name="CustomerID" data-type="String"/>
				<field name="OrderID" data-type="Integer"/>
				<field name="ShipName" data-type="String"/>
				<field name="ShipVia" data-type="Integer"/>
				<field name="ShipPostalCode" data-type="String"/>
				<field name="OrderDate" data-type="Date"/>
				<field name="ShipCity" data-type="String"/>
				<field name="ShipAddress" data-type="String"/>
				<field name="EmployeeID" data-type="Integer"/>
				<field name="ShipRegion" data-type="String"/>
				<field name="Freight" data-type="Double"/>
			</fields>
		</data-source>
	</data-sources>
	<templates>
		<template type="Table" cell-border-rule="all" column-line-color="green" row-line-color="green" row-line="1" column-line="1">
			<page-setup margin-left="15" margin-top="22" margin-right="23" margin-bottom="24" />
			<columns>
				<column width="100" />
				<column width="150" />
				<column width="150" />
				<column width="150" />
			</columns>
			
			<!-- 
			<report-groups>
				<report-group name="PRODUCT_GROUP">
					<expression>$F{GROUP_NAME}</expression>
					<bands>
						<band type="GroupHeader">
							<rows>
								<row height="20">
									<cells>
										<cell background="yellow" foreground="blue" colspan="4" font="11, underline|bold" ><expression>"GroupHeader: "  + $F{GROUP_NAME}</expression></cell>
									</cells>
								</row>
								<row height="20">
									<cells>
										<cell border-right="none" colspan="2"><expression>$V{GROUP_NAME_HEADER}</expression></cell>
										<cell border-left="none" colspan="2" format="dd MMM yyyy" data-type="Date"><expression>$F{CREATED_DATE}</expression></cell>
									</cells>
								</row>
							</rows>
						</band>
						<band type="GroupFooter">
							<rows>
								<row height="20">
									<cells>
										<cell colspan="4"><value>GroupFooter</value></cell>
									</cells>
								</row>
							</rows>
